.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 15px;
  border-bottom: ridge 1px;
  border-color: #E5BB87;
}
.container_person{
  word-wrap: normal;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: hidden;
  /* background-color: #E5BB87; */
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname{
  font-size: large;
}
.seperator{
  width: 100%;
  height: 8px;
  background-color: #E5BB87;
}
.box{
  display: flex;
  align-items: center;
  padding: 16px;
  font-size: large;
  width: 100%;
  border-bottom: ridge 1px;
  border-top: ridge 1px;
  border-color: #E5BB87;

}
.box .box_image{
  height: 30px;
  width: 30px;
}
.box .box_text{
  margin-left: 16px;
}